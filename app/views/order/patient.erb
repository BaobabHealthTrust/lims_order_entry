            <div style="height: 477px; width: 96%; overflow: auto; border-top: 1px solid #23538a; margin: auto;">

            </div>
        </td>
      </tr>
    </table>

    <button id="btnOrder" class="button_blue" style="float: right; margin-right: 15px;" onclick="window.location = '/place_order/<%= @patient[:national_id] rescue nil %>'">Order
      Test
    </button>

    <script>


        function attachBtn() {

            if (__$("nav")) {

                __$("nav").appendChild(__$("btnOrder"));

            } else {

                setTimeout("attachBtn()", 100);

            }

            if(__$("btnLogout")){

                __$("btnLogout").innerHTML = "Cancel";

            }

        }

        setTimeout("attachBtn()", 100);

